{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Soundman Project",
  "description": "Schema for Soundman project metadata file",
  "type": "object",
  "required": ["id", "name", "createdAt", "modifiedAt"],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique project identifier (UUID v4)"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Project name"
    },
    "description": {
      "type": "string",
      "description": "Project description"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "Project creation timestamp in ISO 8601 format"
    },
    "modifiedAt": {
      "type": "string",
      "format": "date-time",
      "description": "Last modification timestamp in ISO 8601 format"
    },
    "files": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uuid"
      },
      "description": "Array of file IDs included in this project"
    },
    "settings": {
      "type": "object",
      "properties": {
        "defaultSampleRate": {
          "type": "integer",
          "minimum": 1,
          "description": "Default sample rate for the project (Hz)"
        },
        "defaultBitDepth": {
          "type": "integer",
          "minimum": 1,
          "description": "Default bit depth for the project"
        }
      },
      "description": "Project-specific settings"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Tags associated with this project"
    },
    "metadata": {
      "type": "object",
      "description": "Additional custom metadata"
    }
  }
}
